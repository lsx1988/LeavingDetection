<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/start_detection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_detection"
        android:textSize="20sp"
        android:onClick="clickBtn"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/detection_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leaving_detected"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:background="@color/indicator_color"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/wifi_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/wifi_level"
            android:layout_gravity="center"
            android:textSize="25sp"/>
    </FrameLayout>
</LinearLayout>
